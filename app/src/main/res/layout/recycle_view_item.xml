<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="182dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatar_iv"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:outlineProvider="none"
                android:backgroundTint="@color/white"
                android:drawableBottom="@drawable/ic_baseline_person_24"/>
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:layout_marginLeft="4dp"
                android:maxLines="1"
                android:text="Name"
                android:textColor="@color/front_grey"
                android:textSize="20sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:outlineProvider="none"
            android:backgroundTint="@color/white"
            android:drawableBottom="@drawable/ic_baseline_phone_24"/>

        <TextView
            android:id="@+id/telephone_tv"
            android:text="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_marginLeft="4dp"
            android:maxLines="1"
            android:textColor="@color/primary_blue"
            android:textSize="20sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp">
        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:outlineProvider="none"
            android:backgroundTint="@color/white"
            android:drawableBottom="@drawable/ic_baseline_home_work_24"/>
        <TextView
            android:id="@+id/address_tv"
            android:text="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="6dp"
            android:maxLines="1"
            android:textColor="@color/primary_grey"
            android:textSize="16sp" />
    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary_grey"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>